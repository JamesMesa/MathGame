<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="homework.cisc.mlgdev.com.mathgame.MainActivity"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Math Game"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tree2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/buttonPlay"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/buttonHighScores"
        android:layout_alignEnd="@+id/buttonHighScores"
        android:layout_alignLeft="@+id/buttonHighScores"
        android:layout_alignStart="@+id/buttonHighScores" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/buttonHighScores"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/buttonQuit"
        android:layout_below="@+id/buttonHighScores"
        android:layout_alignRight="@+id/buttonHighScores"
        android:layout_alignEnd="@+id/buttonHighScores"
        android:layout_alignLeft="@+id/buttonHighScores"
        android:layout_alignStart="@+id/buttonHighScores" />
</RelativeLayout>
